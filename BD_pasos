-- Tabla CITAS
CREATE TABLE citas (
  id VARCHAR(20) NOT NULL PRIMARY KEY,
  dni_usuario VARCHAR(20) NOT NULL,
  id_mascota VARCHAR(20),
  id_empleado VARCHAR(20) NOT NULL,
  fecha DATE NOT NULL,
  hora TIME NOT NULL
);

