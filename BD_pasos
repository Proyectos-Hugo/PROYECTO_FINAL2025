-- Tabla MASCOTAS
CREATE TABLE mascotas (
  id VARCHAR(20) NOT NULL PRIMARY KEY,
  nombre VARCHAR(100) NOT NULL,
  especie VARCHAR(50) NOT NULL,
  raza VARCHAR(50),
  edad INT,
  dni_dueno VARCHAR(20) NOT NULL
);

